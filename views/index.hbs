<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="breadcrumb__text">
          <h2>Blogs</h2>
          <div class="breadcrumb__option">
            <a href="index.html">Home</a>
            <span>Blog</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog spad">
  <div class="container">
    <div class="row">

      {{!-- Start sidebar inject --}}
      {{>sidebar}}
      {{!-- End sidebar inject --}}

      
      <div class="col-lg-8 col-md-7">
        <div class="row">
          {{#each blogs}}
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="blog__item">
              <div class="blog__item__pic">
                <img src="{{imagePath}}" alt="" />
              </div>
              <div class="blog__item__text">
                <ul>
                  <li><i class="fa fa-calendar-o"></i> {{showDate createdAt}}</li>
                  <li><i class="fa fa-comment-o"></i> {{Comments.length}}</li>
                </ul>
                <h5><a href="/blogs/{{id}}">{{title}}</a></h5>
                <p>{{summary}}
                </p>
                <a href="/blogs/{{id}}" class="blog__btn">READ MORE
                  <span class="arrow_right"></span></a>
              </div>
            </div>
          </div>
          {{/each}}
          
          <div class="col-lg-12">
            <div class="product__pagination blog__pagination">
              {{{createPagination pagination}}}
            </div>
            
            {{!-- <div class="product__pagination blog__pagination">
              <a href="#"><i class="fa fa-long-arrow-left"></i></a>
              <a href="#">1</a>
              <a href="#">2</a>
              <a href="#">3</a>
              <a href="#"><i class="fa fa-long-arrow-right"></i></a>
            </div> --}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Blog Section End -->